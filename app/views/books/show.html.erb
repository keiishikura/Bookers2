<main>
  <p id="notice"></p>
    <%= render 'list', book: @book_new, user: @user %>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
          <table class="table">
            <tbody>
              <tr>
                <td>
                <%= link_to user_path(@user.id) do %>
                <%= image_tag @book.user.get_profile_image(100,100) %></br>
                <%= @user.name %>
                <% end %>
                </td>
                <td><%= link_to book_path(@book.id) do %>
                <% @book.title %>
                <% end %>
                </td>
                <td><%= @book.body %></td>

                <% if @book.user == current_user %>
                <td><%= link_to "Edit" ,edit_book_path(@book.id),class:"btn btn-sm btn-success edit_book_52140" %></td>
                <td><%= link_to "Destroy" ,book_path(@book.id),class:"btn btn-sm btn-danger destroy_book_52140",method: :delete,"data-confirm" => "本当に消しますか?" %></td>
                <% end %>
              </tr>
            </tbody>
          </table>
      </div>
</main>